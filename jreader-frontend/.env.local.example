# ============================================
# JReader Frontend â€” Environment Variables
# ============================================
# Copy to .env.local and fill in your values.

# --------------------------------------------
# SQLite Database (required)
# --------------------------------------------
SQLITE_DB_PATH=./data/jreader.db

# --------------------------------------------
# File Storage Directories (required)
# --------------------------------------------
# Must match the paths the Rust service writes to
UPLOADS_DIR=./uploads
WEBNOVEL_DIR=./webnovel

# --------------------------------------------
# Admin Access (optional)
# --------------------------------------------
# Username that receives admin privileges (dictionary upload, etc.)
ADMIN_USERNAME=your-username-here

# --------------------------------------------
# Rust Backend Service (required)
# --------------------------------------------
# URL where jreader-service is running
# Local dev:    http://localhost:3001
# Tailscale:    https://<machine>.ts.net/jreader-service
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Secret shared between Next.js and the Rust service for server-to-server calls
NEXTJS_TO_RUST_SERVICE_AUTH_TOKEN=change-me-to-a-random-secret
